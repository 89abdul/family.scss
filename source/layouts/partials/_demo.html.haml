      %div.row.mixin
        %header
          %h3 child-index()

          %p Apply an ordered <code>z-index</code> over each child.
        %pre
          %code
            :preserve
              <span class="comment"> // Basic usage</span>
              <span class="param"> @include</span> child-index(<span class="num">10</span>); <span class="comment">// equivalent of @include child-index(10, <span class="num" id="demo-index">forward</span>, 0)</span>

              <span class="comment"> // This mixin can take up to 3 arguments : </span>
              <span class="comment"> // $num : Number of child to index </span>
              <span class="comment"> // $direction : Direction of the indexing [ forward / backward ] </span>
              <span class="comment"> // $index : Base indexing number [1, 10, 20 => 1, 2, 3; 11, 12, 13; 21, 22, 23 ]</span>
              <span class="param"> @include</span> child-index(<span class="num no-edit">5</span>, <span class="num no-edit">backward</span>, <span class="num no-edit">10</span>);

